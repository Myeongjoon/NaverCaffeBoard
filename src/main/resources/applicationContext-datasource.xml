<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                        http://www.springframework.org/schema/jdbc  http://www.springframework.org/schema/jdbc/spring-jdbc-3.0.xsd">


	<!-- 
	
	BasicDataSource
	
	연결하고, 주어진 connection이 valid한가 체크
	
	
	 -->

	<bean id="dataSourceSpied" class="org.apache.commons.dbcp2.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://10.110.243.90:3306/test" />
		<property name="username" value="root" />
		<property name="password" value="he" />
		<property name="maxIdle" value="5" />
		<property name="maxTotal" value="5" />
		<property name="minIdle" value="5" />
		<property name="validationQuery" value="SELECT 1" />
	</bean>
	
	
	<!-- 
	
	Log4J에서 SQL 결과물을 로그로 찍기 위해서 추가
	
	 -->
	
	<bean id="dataSource" class="net.sf.log4jdbc.Log4jdbcProxyDataSource">
        <constructor-arg ref="dataSourceSpied" />
        <property name="logFormatter">
            <bean class="net.sf.log4jdbc.tools.Log4JdbcCustomFormatter">
                <property name="loggingType" value="MULTI_LINE" />
                <property name="sqlPrefix" value="SQL         :  "/>
            </bean>
        </property>
    </bean>
	
</beans>
